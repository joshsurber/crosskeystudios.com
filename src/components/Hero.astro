---
const { title } = Astro.props;

import { getImage, Image } from "astro:assets";
import hero_bg from "../assets/hero_bg.png";
import Nav from "../components/Nav.astro";

const hero = await getImage({ src: hero_bg, format: "webp" });

import Logo from "../components/Logo.astro";
---

<div class="hero" style={`--bg-img: url(${hero.src});`}>
  <div class="content">
    <h1>{title}</h1>
    <slot />
  </div>

  <div class="logo">
    <Logo turnOn={true} />
  </div>
</div>

<style>
  .hero {
    background:
      conic-gradient(rgb(0 0 0 /0.5)),
      var(--bg-img) center black;
    background-size: cover;
    color: white;
    border-bottom: 1px solid black;
    box-shadow: 0 0 1rem -0.5rem var(--color-primary);
    inset: 0 0 auto;
    padding: var(--space-2xl);
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    align-items: center;
    gap: var(--space-xl);
  }
  .logo {
    perspective: 1rem;
    transform: perspective(30rem) rotate3d(1, -1, 0, 30deg);
    /* animation: straightenLogo linear; */
    animation-timeline: scroll();
  }

  @keyframes straightenLogo {
    /* At the very top of the page */
    from {
      transform: perspective(30rem) rotate3d(1, -1, 0, 30deg);
    }
    /* By the time you reach the end of the scroll container (or a set distance) */
    to {
      transform: perspective(0) rotate3d(1, 1, 1, 0deg);
    }
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: white;
  }
  .logo {
    width: 20rem;
    background: var(--color-surface);
    border: 1px solid black;
    box-shadow: 0 0 1rem var(--color-shadow);
    padding: 3rem;
    border-radius: 1rem;

    aspect-ratio: 644/496;
  }
</style>
