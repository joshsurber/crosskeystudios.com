---
const { title } = Astro.props;

import { getImage, Image } from "astro:assets";
import hero_bg from "../assets/hero_bg.png";
import Nav from "../components/Nav.astro";

const hero = await getImage({ src: hero_bg, format: "webp" });

import Logo from "../components/Logo.astro";
---

<div class="hero" style={`--bg-img: url(${hero.src});`}>
  <div class="content">
    <h1>{title}</h1>
    <slot />
  </div>

  <div class="logo">
    <Logo turnOn={true} />
  </div>
</div>

<style>
  .hero {
    background:
      conic-gradient(rgb(0 0 0 /0.5)),
      var(--bg-img) center black;
    background-size: cover;
    color: white;
    border-bottom: 1px solid black;
    box-shadow: 0 0 1rem var(--color-shadow);
    inset: 0 0 auto;
    padding: var(--space-2xl);
    display: grid;
    grid-template-columns: repeat(2, 1fr);
  }
  .logo {
    /* transform: rotatex(30deg) rotatey(0deg) rotatez(5deg); */
    /* transform: rotate3d(1, 1, 1, 10deg); */
    /* transform: skew(-10deg, 10deg); */
    perspective: 1rem;

    /* 2. rotateX tilts it 'back' (negative value pulls top away) */
    /* 3. rotateY tilts it 'right' (positive value pushes left side forward) */
    /* transform: rotateX(20deg) rotateY(20deg); */
    transform: perspective(1000px) rotate3d(1, -1, 0, 30deg);
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: white;
  }
  .logo {
    width: 20rem;
    background: var(--color-surface);
    border: 1px solid black;
    box-shadow: 0 0 1rem var(--color-shadow);
    padding: 3rem;
    border-radius: 1rem;
  }
</style>
