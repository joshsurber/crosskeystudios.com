---
const { pathname } = Astro.url;

// Remove trailing slashes for more accurate matching
const normalizePath = (path) => path.replace(/\/$/, "") || "/";
const currentPath = normalizePath(pathname);

const navLinks = [
  // { label: "Home", href: "/home" },
  { label: "Services", href: "/home#services" },
  { label: "Portfolio", href: "/home#portfolio" },
  // { label: "Portfolio", href: "/portfolio" },
  { label: "Pricing", href: "/pricing" },
  // { label: "Playbook", href: "/playbook" },
  { label: "About", href: "/about" },
  { label: "Contact", href: "/contact" },
];
---

<nav>
  <input type="checkbox" name="menu-toggle" id="menu-toggle" />
  <ul>
    {
      navLinks.map(({ href, label }) => {
        const isActive = currentPath === normalizePath(href);

        return (
          <li>
            <a
              href={href}
              class={isActive ? "active" : ""}
              aria-current={isActive ? "page" : undefined}
            >
              {label}
            </a>
          </li>
        );
      })
    }
  </ul>
  <label for="menu-toggle"></label>
</nav>

<style>
  nav {
    container-type: inline-size;
    text-align: right;
  }
  input {
    display: none;
  }
  label {
    anchor-name: --menu-toggle;
  }
  ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-end;
    gap: var(--gap);
    list-style-type: none;
  }
  li {
    margin-inline: inherit;
  }
  a {
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s ease;
    &.active {
      color: currentColor;
      text-shadow: none;
      &:hover {
        cursor: default;
      }
    }
  }
  @container (width < 45em) {
    ul {
      display: none;
    }
    input:checked ~ ul {
      display: flex;
      position: absolute;
      position-anchor: --menu-toggle;
      flex-direction: column;
      inset: auto var(--gap);
      inset-block-start: calc(0.5rem + anchor(bottom));
      padding: var(--gap);
      border: 1px solid var(--color-border);
      background: var(--color-surface);
      box-shadow: 0 0 1rem var (--color-shadow);
    }
    label::after {
      content: "☰";
      font-size: 1.5em;
    }
    input:checked ~ label::after {
      content: "⨉";
      font-weight: bold;
    }
  }
</style>
