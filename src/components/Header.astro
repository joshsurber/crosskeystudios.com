---
import Logo from "../components/Logo.astro";
import Nav from "../components/Nav.astro";
---

<header>
  <Logo alt="Cross Key Studios logo" height="5" />
  <Nav />
</header>

<style>
  header {
    display: grid;
    z-index: 5;
    top: 0;
    /* grid-template: "logo nav"; */
    grid-template-columns: max-content 1fr;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    gap: var(--gap);
    background: black;
    box-shadow: 0 0 1rem -0.5rem var(--color-primary);
    opacity: 0.9;
    @media (width < 45em) {
      position: static;
      /*   grid-template: "logo" "nav"; */
      /*   place-items: center; */
      /*   justify-content: center; */
    }
    @media (height>40em) {
      position: sticky;
    }
  }
</style>
