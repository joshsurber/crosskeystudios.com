---
import Logo from "../components/Logo.astro";
import Nav from "../components/Nav.astro";
---

<header>
  <Logo alt="Cross Key Studios logo" height="5" />
  <Nav />
</header>

<style>
  header {
    background: black;
    display: grid;
    grid-template: "logo nav";
    gap: 1rem;
    padding: 1rem;
    box-shadow: 0 0 1rem -0.5rem var(--color-primary);
    position: sticky;
    top: 0;
    z-index: 5;
    align-items: center;
    justify-content: space-between;
    opacity: 0.9;
    @media (width < 40em) {
      grid-template: "logo" "nav";
      justify-content: center;
      place-items: center;
    }
  }
</style>
